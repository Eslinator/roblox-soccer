{
  "workdir": ".",
  "repo_root": ".",
  "default_branch": "main",
  "timeouts": { "run_sec": 120, "verify_sec": 45 },
  "retries": 1,
  "allowlist_bins": [
    "git","gh","rojo","rbxcloud","aftman","stylua","selene","make",
    "zsh","bash","python3","jq","node","curl",
    "ls","cat","cp","mv","rm","mkdir","chmod",
    "which","echo","env","printenv","printf"
  ],
  "deny_patterns": ["rm -rf /","shutdown","reboot","diskutil erase","mkfs","dd if="],
  "env_passthrough": ["UNIVERSE_ID","PLACE_ID","GROUP_ID","GITHUB_TOKEN","ROBLOX_API_KEY"],
  "log_dir": ".connector/logs",
  "dry_run_default": true
}

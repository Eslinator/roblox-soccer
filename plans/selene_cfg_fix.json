{
  "dry_run": false,
  "steps": [
    { "type":"write_files","files": {
      "selene.toml": {
        "encoding":"utf8",
        "content": "std = \"roblox\"\nexclude = [\"Packages/**\", \"DevPackages/**\"]\n"
      }
    }},
    { "type":"validate","checks": [
      { "op":"text_contains","path":"selene.toml","substr":"std = \"roblox\"" },
      { "op":"cmd_contains","cmd":"selene --version","substr":"selene" }
    ]},
    { "type":"run","cmd":"selene src || true" }
  ]
}

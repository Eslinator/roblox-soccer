{
  "dry_run": false,
  "steps": [
    { "type": "git_ops",
      "ops": [
        { "op": "ensure_repo" },
        { "op": "create_branch", "name": "bot/setup-connector", "base": "main", "if_exists": "checkout" },
        { "op": "add", "paths": [".github/workflows/ci.yml"] },
        { "op": "commit", "message": "ci: run Selene lint + Rojo build on PR" },
        { "op": "status" }
      ]
    },
    { "type": "validate",
      "checks": [
        { "op": "cmd_contains", "cmd": "git log -1 --pretty=%s", "substr": "ci: run Selene lint + Rojo build on PR" }
      ]
    }
  ]
}

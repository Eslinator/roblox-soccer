{
  "dry_run": false,
  "steps": [
    { "type": "git_ops",
      "ops": [
        { "op": "ensure_repo" },
        { "op": "create_branch", "name": "bot/setup-connector", "base": "main", "if_exists": "checkout" },
        { "op": "add", "paths": [
          "src/ServerScriptService/Bot/BotAI.lua",
          "src/ServerScriptService/Match/MatchManager.server.lua"
        ] },
        { "op": "commit", "message": "feat(game): bot intercept + match timer (server authority)" },
        { "op": "status" }
      ]
    },
    { "type": "validate",
      "checks": [
        { "op": "cmd_contains", "cmd": "git log -1 --pretty=%s", "substr": "feat(game): bot intercept + match timer" }
      ]
    }
  ]
}

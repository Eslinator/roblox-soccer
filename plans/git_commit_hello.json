{
  "dry_run": false,
  "steps": [
    { "type": "git_ops",
      "ops": [
        { "op": "ensure_repo" },
        { "op": "create_branch", "name": "bot/setup-connector", "base": "main", "if_exists": "checkout" },
        { "op": "add", "paths": ["bot/HELLO.txt"] },
        { "op": "commit", "message": "chore(bot): add HELLO connector file" },
        { "op": "status" }
      ]
    },
    { "type": "validate",
      "checks": [
        { "op": "cmd_success", "cmd": "git rev-parse --is-inside-work-tree" },
        { "op": "cmd_contains", "cmd": "git rev-parse --abbrev-ref HEAD", "substr": "bot/setup-connector" },
        { "op": "cmd_contains", "cmd": "git log -1 --pretty=%s", "substr": "chore(bot): add HELLO connector file" }
      ]
    }
  ]
}

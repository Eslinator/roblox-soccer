{
  "dry_run": false,
  "steps": [
    { "type": "write_files",
      "files": {
        "aftman.toml": { "encoding": "utf8", "content":
"[tools]\nrojo = \"rojo-rbx/rojo@7.6.1\"\nrbxcloud = \"Sleitnick/rbxcloud@0.17.0\"\nstylua = \"JohnnyMorganz/stylua@0.20.2\"\nselene = \"Kampfkarren/selene@0.26.1\"\n"
        },
        "selene.toml": { "encoding": "utf8", "content":
"std = \"roblox\"\nexclude = [ \"Packages/**\" ]\n[files]\nsrc = true\n"
        },
        ".stylua.toml": { "encoding": "utf8", "content":
"column_width = 120\nindent_type = \"Spaces\"\nindent_width = 4\nquote_style = \"AutoPreferDouble\"\ncall_parentheses = \"None\"\n"
        }
      }
    },
    { "type": "validate",
      "checks": [
        { "op": "file_exists", "path": "aftman.toml" },
        { "op": "file_exists", "path": "selene.toml" },
        { "op": "file_exists", "path": ".stylua.toml" },
        { "op": "text_contains", "path": "aftman.toml", "substr": "stylua" },
        { "op": "text_contains", "path": "selene.toml", "substr": "std = \"roblox\"" }
      ]
    }
  ]
}

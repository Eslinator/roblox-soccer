{
  "dry_run": false,
  "steps": [
    { "type": "git_ops",
      "ops": [
        { "op": "ensure_repo" },
        { "op": "create_branch", "name": "bot/setup-connector", "base": "main", "if_exists": "checkout" },
        { "op": "add", "paths": ["aftman.toml","selene.toml",".stylua.toml"] },
        { "op": "commit", "message": "chore(ci): add Selene/Stylua configs via Aftman" },
        { "op": "status" }
      ]
    },
    { "type": "validate",
      "checks": [
        { "op": "cmd_contains", "cmd": "git log -1 --pretty=%s", "substr": "chore(ci): add Selene/Stylua configs via Aftman" }
      ]
    }
  ]
}
